#include <stdio.h>

struct Node {
    int data;
    struct Node *next;
};

struct Node n1, n2, n3, n4;
struct Node *head = NULL;

void createList() {
    n1.data = 10;
    n2.data = 20;
    n3.data = 30;
    n4.data = 40;

    n1.next = &n2;
    n2.next = &n3;
    n3.next = &n4;
    n4.next = &n1; 

    head = &n1;
}

void display() {
    if (head == NULL) {
        printf("List is empty\n");
        return;
    }
    struct Node *temp = head;
    do {
        printf("%d ", temp->data);
        temp = temp->next;
    } while (temp != head);
    printf("\n");
}

void deleteBeginning() {
    if (head == NULL) {
        printf("List is empty\n");
        return;
    }
    struct Node *last = head;
    while (last->next != head) {
        last = last->next;
    }
    head = head->next;
    last->next = head;
    printf("Deleted from beginning\n");
}

void deleteEnd() {
    if (head == NULL) {
        printf("List is empty\n");
        return;
    }
    struct Node *temp = head, *prev = NULL;
    while (temp->next != head) {
        prev = temp;
        temp = temp->next;
    }
    prev->next = head;
    printf("Deleted from end\n");
}

int main() {
    createList();    

    printf("Original list: ");
    display();

    deleteBeginning();
    display();

    deleteEnd();
    display();

    return 0;
}
